<Window x:Class="PasswordBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel MaxWidth="300" Margin="20">
            <PasswordBox x:Name="pwdBx" PasswordChar="*" MinHeight="30" />
            <PasswordBox MinHeight="30" />
        </StackPanel>
        <StackPanel Margin="10" MaxWidth="300">
            <Label>Password:</Label>
            <PasswordBox Name="myPasswordBox" MaxLength="12" PasswordChar="*" />
        </StackPanel>
    </StackPanel>
</Window>
