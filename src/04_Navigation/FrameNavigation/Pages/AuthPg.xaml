<Page x:Class="FrameNavigation.Pages.AuthPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FrameNavigation.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      WindowTitle="Authentication"
      Title="AuthPg">

    <Grid>
        <StackPanel MaxWidth="200">
            <Label Margin="0 5" Padding="0 5">Login</Label>
            <TextBox Margin="0 5" Padding="5"></TextBox>
            <Label Margin="0 5" Padding="0 5">Password</Label>
            <PasswordBox Margin="0 5" Padding="5"></PasswordBox>
            <UniformGrid>
                <Button x:Name="loginBtn" Margin="0 0 2 0" Padding="5" Click="loginBtn_Click">Login</Button>
                <Button x:Name="registerBtn" Margin="2 0 0 0" Padding="5" Click="registerBtn_Click">Register</Button>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Page>
