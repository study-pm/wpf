<Page x:Class="RoleNavigation.Pages.AuthPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RoleNavigation.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authentication" WindowTitle="Authentication">

    <StackPanel MaxWidth="300">
        <Label>Login</Label>
        <TextBox></TextBox>
        <Label>Password</Label>
        <TextBox></TextBox>
        <UniformGrid>
            <Button>Register</Button>
            <Button x:Name="loginBtn" Click="loginBtn_Click" IsDefault="True">Login</Button>
        </UniformGrid>
    </StackPanel>
</Page>
