<Window x:Class="NeedleworkStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeedleworkStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="LayOut">
        <Button Height="50" Width="150" x:Name="btnStart" Click="btnStart_Click" Background="Beige" Foreground="Blue" xml:space="preserve">
            Нажать      &lt;"кнопку"&gt;
        </Button>
        <Button Height="30" Width="100" x:Name="btnSart" Content="Ok" Click="btnStart_Click"  Foreground="Blue">
            <Button.HorizontalAlignment>
                <HorizontalAlignment>Right</HorizontalAlignment>
            </Button.HorizontalAlignment>
            <Button.Background>
                <SolidColorBrush Color="Red" Opacity="0.5"/>
            </Button.Background>
        </Button>
        <ListBox>
            <local:Product Title="Набор для вышивки" Price="2000"/>
        </ListBox>
    </StackPanel>
</Window>